---
import nav from "../../content/nav.json";
import site from "../../content/site.json";

// 長い siteName を見た目用に短縮（「｜」より左を採用）
const brand = (site?.siteName ?? "").split("｜")[0] || site?.siteName || "";

// tagline はカンマ区切りの先頭だけをバッジに
const taglineTop = (site?.tagline ?? "").split(",")[0] || "";
---

<header class="nav">
  <div class="container nav-inner">
    <div class="brand-group">
      <a
        href="/#top"
        class="brand-link"
        style="display: flex; align-items: center; gap: 10px;"
      >
        <img
          src="/img/icon.png"
          alt=""
          width="32"
          height="32"
          style="border-radius: 4px;"
        />
        <span>{brand}</span>
      </a>
    </div>

    {/* Hamburger Button (Mobile Only) */}
    <button class="burger" aria-label="Menu" id="js-burger">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>

    {/* Nav Links */}
    <nav class="nav-links" id="js-nav" aria-label="Primary">
      {
        nav.header.map((i) => (
          <a href={i.href} class="nav-item">
            {i.label}
          </a>
        ))
      }
    </nav>
  </div>
</header>
<div class="nav-overlay" id="js-overlay"></div>

<script>
  const burger = document.getElementById("js-burger");
  const nav = document.getElementById("js-nav");
  const overlay = document.getElementById("js-overlay");
  const links = document.querySelectorAll(".nav-item");

  function toggleMenu() {
    burger?.classList.toggle("is-active");
    nav?.classList.toggle("is-active");
    overlay?.classList.toggle("is-active");
    document.body.classList.toggle("no-scroll");
  }

  function closeMenu() {
    burger?.classList.remove("is-active");
    nav?.classList.remove("is-active");
    overlay?.classList.remove("is-active");
    document.body.classList.remove("no-scroll");
  }

  burger?.addEventListener("click", toggleMenu);
  overlay?.addEventListener("click", closeMenu);

  links.forEach((link) => {
    link.addEventListener("click", closeMenu);
  });
</script>

<style>
  :global(body) {
    padding-top: 60px; /* Header height */
  }

  .nav {
    position: fixed; /* Changed from sticky */
    top: 0;
    left: 0;
    width: 100%;
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.95);
    border-bottom: 1px solid var(--line);
    z-index: 1000; /* Increased z-index */
  }

  .nav-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 60px;
  }

  .brand-group {
    display: flex;
    align-items: center;
    gap: 12px;
    min-width: 0;
  }

  .brand-link {
    font-weight: 700;
    color: var(--fg);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Desktop Styles */
  .nav-links {
    display: flex;
    gap: 20px;
    align-items: center;
  }

  .nav-item {
    text-decoration: none;
    color: var(--fg);
    font-weight: 500;
    transition: color 0.2s;
  }
  .nav-item:hover {
    color: var(--accent);
  }

  .burger {
    display: none; /* Hidden on desktop */
  }

  .nav-overlay {
    display: none;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .badge {
      display: none;
    } /* Hide badge on mobile to save space */

    .burger {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      width: 30px;
      height: 20px;
      background: none;
      border: none;
      cursor: pointer;
      z-index: 1002; /* Above nav-links */
      padding: 0;
    }

    .burger .bar {
      display: block;
      width: 100%;
      height: 2px;
      background-color: var(--fg);
      border-radius: 2px;
      transition: all 0.3s ease;
    }

    /* Burger Animation */
    .burger.is-active .bar:nth-child(1) {
      transform: translateY(9px) rotate(45deg);
    }
    .burger.is-active .bar:nth-child(2) {
      opacity: 0;
    }
    .burger.is-active .bar:nth-child(3) {
      transform: translateY(-9px) rotate(-45deg);
    }

    .nav-links {
      position: fixed;
      top: 60px; /* Below header */
      right: 0;
      width: 70%;
      height: calc(100vh - 60px);
      background: var(--sub);
      flex-direction: column;
      align-items: flex-start;
      padding: 24px;
      gap: 24px;
      border-left: 1px solid var(--line);
      transform: translateX(100%);
      transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
      z-index: 1001; /* Above header background */
      overflow-y: auto;
    }

    .nav-links.is-active {
      transform: translateX(0);
      box-shadow: -5px 0 20px rgba(0, 0, 0, 0.1);
    }

    .nav-item {
      font-size: 1.1rem;
      width: 100%;
      padding: 8px 0;
      border-bottom: 1px solid var(--line);
    }

    /* Overlay */
    .nav-overlay {
      display: block;
      position: fixed;
      top: 60px;
      left: 0;
      width: 100%;
      height: calc(100vh - 60px);
      background: rgba(0, 0, 0, 0.4);
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s ease;
      z-index: 999; /* Below header */
    }
    .nav-overlay.is-active {
      opacity: 1;
      pointer-events: auto;
    }
  }
</style>
