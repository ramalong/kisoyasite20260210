---
import BaseLayout from "../../layouts/BaseLayout.astro";
import servicesData from "../../content/services.json";
import "../../styles/global.css";

// 1. Generate paths for all service IDs
export async function getStaticPaths() {
  return servicesData.map((service) => ({
    params: { id: service.id },
    props: { service },
  }));
}

const { service } = Astro.props;
const { details } = service;

// Fallback if details are missing (though JSON is updated)
const desc = details?.description || service.summary;

// Define Accent Color and Text Color
let accentColor = "#edafb8"; // Default (Counseling)
let textColor = "#222222"; // Default Text

if (service.id === "learning") {
  accentColor = "#DE802B";
  textColor = "#ffffff";
}
if (service.id === "expression") accentColor = "#b0c4b1";
---

<BaseLayout
  title={`${service.title} | 心理教育相談室・基礎屋`}
  description={service.summary}
>
  <div class="service-detail-page" style={`--service-accent: ${accentColor}; --hero-text: ${textColor};`}>
    {/* Hero Area */}
    <section class="detail-hero">
      <div class="container hero-inner">
        <h1 class="detail-title">{service.title}</h1>
        <p class="detail-subtitle">{service.summary}</p>
      </div>
      <div class="bg-grain"></div>
    </section>

    {/* Main Content */}
    <div class="container detail-container">
      {/* Description */}
      <section class="detail-section">
        <h2 class="section-title">概要</h2>
        <p class="detail-desc">{desc}</p>

        {/* Counseling Support Layout */}
        {
          details?.counseling_support && (
            <div class="counseling-layout">
              {/* Basic Info */}
              <section class="counseling-block basic-info">
                <h2 class="section-title">基本情報</h2>
                <ul class="basic-info-list">
                  <li>
                    <strong>日時：</strong>
                    {details.counseling_support.basic_info.reservation}
                  </li>
                  <li>
                    <strong>時間：</strong>
                    {details.counseling_support.basic_info.duration}
                  </li>
                  <li>
                    <strong>担当：</strong>
                    {details.counseling_support.basic_info.staff}
                  </li>
                </ul>
              </section>

              {/* Pricing */}
              <section class="counseling-block pricing">
                <h2 class="section-title">心理教育相談料金</h2>
                <div class="counseling-price-box">
                  <div class="price-row">
                    <strong>初回：</strong>
                    {details.counseling_support.pricing.initial}
                  </div>
                  <div class="price-row">
                    <strong>2回目以降：</strong>
                    {details.counseling_support.pricing.sequel}
                  </div>
                  <ul class="price-notes">
                    {details.counseling_support.pricing.notes.map((n) => (
                      <li>{n}</li>
                    ))}
                  </ul>
                </div>
              </section>

              {/* Content */}
              <section class="counseling-block content">
                <h2 class="section-title">相談内容</h2>

                <div class="consult-group">
                  <h3 class="consult-title">
                    {details.counseling_support.consultation_psych.title}
                  </h3>
                  <p>
                    {details.counseling_support.consultation_psych.description}
                  </p>
                  <dl class="consult-list">
                    {details.counseling_support.consultation_psych.items.map(
                      (i) => (
                        <div class="consult-item">
                          <dt>{i.term}</dt>
                          <dd>{i.desc}</dd>
                        </div>
                      ),
                    )}
                  </dl>
                </div>

                <div class="consult-group">
                  <h3 class="consult-title">
                    {details.counseling_support.consultation_learning.title}
                  </h3>
                  <p>
                    {
                      details.counseling_support.consultation_learning
                        .description
                    }
                  </p>
                  <ul class="consult-bullets">
                    {details.counseling_support.consultation_learning.items.map(
                      (i) => (
                        <li>{i}</li>
                      ),
                    )}
                  </ul>
                </div>
              </section>

              {/* Methods Text */}
              <section class="counseling-block methods">
                <h2 class="section-title">主な支援の方法</h2>
                <ul class="methods-list">
                  {details.counseling_support.support_methods_text.map((m) => (
                    <li>{m}</li>
                  ))}
                </ul>
              </section>

              {/* Psych Testing */}
              <section class="counseling-block testing">
                <h2 class="section-title">心理検査・各種検査</h2>
                <p>{details.counseling_support.psych_testing.desc}</p>
                <p class="cost-highlight">
                  {details.counseling_support.psych_testing.cost}
                </p>
              </section>

              {/* Professional Support */}
              <section class="counseling-block professional">
                <h2 class="section-title">
                  {details.counseling_support.professional_support.title}
                </h2>
                <h3 class="sub-title">
                  {details.counseling_support.professional_support.subtitle}
                </h3>
                <dl class="prof-list">
                  <div class="prof-item">
                    <>
                      <dt>対象：</dt>
                      <dd>
                        {details.counseling_support.professional_support.target}
                      </dd>
                    </>
                  </div>
                  <div class="prof-item">
                    <>
                      <dt>内容：</dt>
                      <dd>
                        {
                          details.counseling_support.professional_support
                            .content
                        }
                      </dd>
                    </>
                  </div>
                  <div class="prof-item">
                    <>
                      <dt>派遣：</dt>
                      <dd>
                        {
                          details.counseling_support.professional_support
                            .dispatch
                        }
                      </dd>
                    </>
                  </div>
                </dl>
              </section>
            </div>
          )
        }

        {/* Expression Support Layout */}
        {
          details?.expression_support && (
            <div class="expression-layout">
              {details.expression_support.classes.map((cls) => (
                <section class="expression-block">
                  <h2 class="expression-title">{cls.title}</h2>
                  {cls.subtitle && (
                    <p class="expression-subtitle">
                      <strong>{cls.subtitle}</strong>
                    </p>
                  )}

                  {/* Schedule */}
                  <div class="expression-section expression-schedule">
                    <h3>日時・対象</h3>
                    <ul>
                      {cls.schedule.map((s) => (
                        <li>
                          <strong>{s.loc}</strong>：{s.time}
                        </li>
                      ))}
                      <li>
                        <strong>対象</strong>：{cls.target}
                      </li>
                    </ul>
                  </div>

                  {/* Pricing */}
                  <div class="expression-section expression-pricing">
                    <h3>
                      料金
                      {cls.title.includes("絵画") ? "（1回50分 月4回）" : ""}
                    </h3>
                    <div class="expression-pricing-list">
                      {cls.pricing.map((p) => (
                        <div class="pricing-row">
                          <div class="pricing-grade">{p.plan}</div>
                          <div class="pricing-text">{p.fee}</div>
                        </div>
                      ))}
                    </div>
                  </div>

                  {/* Content */}
                  <div class="expression-section expression-info">
                    <h3>内容</h3>
                    <ul class="detail-points">
                      {cls.content.map((c) => (
                        <li>{c}</li>
                      ))}
                    </ul>
                  </div>

                  {/* Affiliation */}
                  <div class="expression-section expression-info">
                    <h3>所属</h3>
                    <p>{cls.affiliation}</p>
                  </div>

                  {/* Expenses */}
                  <div class="expression-section expression-expenses">
                    <h3>諸経費・特典</h3>
                    <ul class="expenses-list">
                      {cls.expenses.entrance && (
                        <li>
                          <strong>入会金</strong>：{cls.expenses.entrance}
                        </li>
                      )}
                      {cls.expenses.others &&
                        cls.expenses.others.map((o) => {
                          const parts = o.split("：");
                          const label = parts[0];
                          const val = parts.slice(1).join("：");
                          return (
                            <li>
                              {val ? (
                                <>
                                  <strong>{label}</strong>：{val}
                                </>
                              ) : (
                                o
                              )}
                            </li>
                          );
                        })}
                      {cls.expenses.benefits &&
                        cls.expenses.benefits.map((b) => {
                          const parts = b.split("：");
                          const label = parts[0];
                          const val = parts.slice(1).join("：");
                          return (
                            <li>
                              {val ? (
                                <>
                                  <strong>{label}</strong>：{val}
                                </>
                              ) : (
                                b
                              )}
                            </li>
                          );
                        })}
                    </ul>
                  </div>
                </section>
              ))}
            </div>
          )
        }



        {/* Learning Support Special Layout */}
        {
          details?.learning_support && (
            <div class="learning-layout">
              {/* Normal Support */}
              <section class="learning-block normal">
                <h2 class="learning-title">
                  {details.learning_support.normal.title}
                </h2>

                {/* Schedule */}
                {details.learning_support.normal.schedule && (
                  <div class="learning-schedule">
                    <h3>日時・対象</h3>
                    <ul>
                      <li>
                        <strong>《日時》</strong>{" "}
                        {details.learning_support.normal.schedule.time}
                      </li>
                      <li>
                        <strong>《対象》</strong>{" "}
                        {details.learning_support.normal.schedule.target}
                      </li>
                    </ul>
                  </div>
                )}

                {/* Pricing */}
                <div class="learning-pricing">
                  <h3>料金プラン（月謝制と回数制で選択）</h3>
                  <div class="learning-pricing-list">
                    {details.learning_support.normal.pricing.map((p) => (
                      <div class="pricing-row">
                        <div class="pricing-grade">{p.name}</div>
                        <div class="pricing-text">{p.price_text}</div>
                      </div>
                    ))}
                  </div>
                </div>

                {/* Info */}
                <div class="learning-info">
                  <h3>形式・対応</h3>
                  <dl class="info-list">
                    {details.learning_support.normal.info.map((i) => (
                      <div class="info-item">
                        <dt>{i.label}</dt>
                        <dd>{i.value}</dd>
                      </div>
                    ))}
                  </dl>
                </div>

                {/* Details */}
                <div class="learning-details">
                  <h3>{details.learning_support.normal.details.title}</h3>
                  <p class="detail-summary">
                    {details.learning_support.normal.details.summary}
                  </p>
                  <ul class="detail-points">
                    {details.learning_support.normal.details.points.map(
                      (pt) => (
                        <li>
                          <strong>{pt.head}</strong>
                          <span>{pt.text}</span>
                        </li>
                      ),
                    )}
                  </ul>
                </div>
              </section>

              {/* Special Support */}
              <section class="learning-block special">
                <h2 class="learning-title">
                  {details.learning_support.special.title}
                </h2>
                <div class="special-content">
                  <p class="special-desc">
                    {details.learning_support.special.description}
                  </p>
                  <ul class="special-list">
                    {details.learning_support.special.features.map((f) => (
                      <li>{f}</li>
                    ))}
                  </ul>
                </div>

                {/* Special Pricing */}
                {details.learning_support.special.pricing && (
                  <div class="learning-pricing special-pricing">
                    <h3>料金プラン（時間は通常支援と同じです）</h3>
                    <div class="learning-pricing-list">
                      {details.learning_support.special.pricing.map((p) => (
                        <div class="pricing-row">
                          <div class="pricing-grade">{p.name}</div>
                          <div class="pricing-text">{p.price_text}</div>
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </section>

              {/* Tutor Support (Merged into Learning) */}
              {details.learning_support.tutor && (
                 <section class="learning-block tutor">
                    <h2 class="learning-title">
                      {details.learning_support.tutor.title}
                    </h2>
                    <p class="detail-summary">
                       {details.learning_support.tutor.description}
                    </p>

                    {/* Pricing */}
                    <div class="learning-pricing">
                      <h3>
                         {details.learning_support.tutor.pricing.title}
                      </h3>
                      <div class="tutor-pricing-grades">
                        {details.learning_support.tutor.pricing.grades.map((g) => (
                          <div class="tutor-grade-block">
                            <h4 class="grade-title">{g.grade}</h4>
                            <ul class="grade-plans">
                              {g.plans.map((p) => (
                                <li>
                                  <span class="plan-duration">{p.duration}</span>
                                  <span class="plan-fee">{p.fee}</span>
                                </li>
                              ))}
                            </ul>
                          </div>
                        ))}
                      </div>
                    </div>

                    {/* Details */}
                    <div class="learning-info">
                       <h3>詳細</h3>
                       <div class="tutor-info-card">
                          <div class="info-grid-tutor">
                            <div class="info-row">
                              <strong class="info-label">日時</strong>
                              <div class="info-val">
                                {details.learning_support.tutor.info.time}
                              </div>
                            </div>
                            <div class="info-row">
                              <strong class="info-label">対象エリア</strong>
                              <div class="info-val">
                                {details.learning_support.tutor.info.area}
                              </div>
                            </div>
                            <div class="info-row">
                              <strong class="info-label">指導体制</strong>
                              <div class="info-val">
                                {details.learning_support.tutor.info.supervision}
                              </div>
                            </div>
                            <div class="info-row">
                              <strong class="info-label">対応内容</strong>
                              <ul class="info-bullets">
                                {details.learning_support.tutor.info.content.map((c) => (
                                  <li>{c}</li>
                                ))}
                              </ul>
                            </div>
                          </div>
                       </div>
                    </div>
                 </section>
              )}

              {/* Expenses */}
              {details.learning_support.expenses && (
                <section class="learning-block expenses">
                  <h2 class="learning-title">
                    {details.learning_support.expenses.title}
                  </h2>
                  <ul class="expenses-list">
                    <li>
                      <strong>入会金：</strong>
                      {details.learning_support.expenses.entrance_fee}
                    </li>
                    <li>
                      <strong>お問い合わせ・見学・体験：</strong>
                      {details.learning_support.expenses.trial}
                    </li>
                    <li>
                      <strong>兄弟姉妹割引</strong>
                      <ul class="discount-list">
                        {details.learning_support.expenses.discounts.map(
                          (d) => (
                            <li>{d}</li>
                          ),
                        )}
                      </ul>
                    </li>
                  </ul>
                </section>
              )}
            </div>
          )
        }

        {
          /* Generic Features (Bullets) - Only if NOT learning support and NOT counseling (redundant) */
        }
        {
          !details?.learning_support &&
            !details?.counseling_support &&
            (details as any)?.features && (
              <div class="features-list">
                <h3 class="sub-title">
                  {service.id === "counseling" ? "主な手法" : "特徴"}
                </h3>
                <ul>
                  {(details as any).features.map((f: string) => (
                    <li>{f}</li>
                  ))}
                </ul>
                {/* Message for Professionals (inside features) */}
                {(details as any).message && (
                  <div class="features-message">
                    <p>{(details as any).message}</p>
                  </div>
                )}
              </div>
            )
        }
      </section>

      {/* Related Organization */}
      {
        details?.related_org && (
          <section class="detail-section related-section">
            <h2 class="section-title">連携機関</h2>
            <div class="related-card">
              <h3 class="related-title">{details.related_org.name}</h3>
              <p class="related-desc">{details.related_org.description}</p>
              <a
                href={details.related_org.url}
                target="_blank"
                rel="noopener noreferrer"
                class="btn sub"
              >
                {details.related_org.url_label}
              </a>
            </div>
          </section>
        )
      }

      {/* Footer Date (Counseling) */}
      {
        details?.counseling_support?.update_date && (
          <p
            class="update-date"
            style="text-align: right; color: #888; font-size: 0.9rem; margin-top: 24px;"
          >
            {details.counseling_support.update_date}
          </p>
        )
      }

      {/* CTA / Contact */}
      <section class="detail-section cta-section">
        <h2 class="section-title">お問い合わせ</h2>
        <p>まずはお気軽にご相談ください。</p>
        <a href="https://form1.fc2.com/form/?id=549531" class="btn primary" target="_blank" rel="noopener noreferrer">お問い合わせフォームへ</a>
      </section>
    </div>
  </div>
</BaseLayout>

<style>
  /* Page Layout */
  .service-detail-page {
    padding-bottom: 80px;
    background-color: var(--bg); /* #EEEEEE base */
  }

  /* Hero */
  .detail-hero {
    background-color: var(--service-accent); /* Dynamic Accent */
    padding: 100px 0 60px;
    text-align: center;
    position: relative;
    border-bottom: 1px solid var(--line);
  }
  .hero-inner {
    position: relative;
    z-index: 2;
  }
  .detail-title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 16px;
    color: var(--hero-text);
  }
  .detail-subtitle {
    max-width: 800px;
    margin: 0 auto;
    color: var(--hero-text);
    opacity: 0.9;
  }

  /* Container */
  .detail-container {
    padding-top: 60px;
    display: flex;
    flex-direction: column;
    gap: 80px;
    max-width: 900px; /* Readability focus */
  }

  /* Section Styling */
  .detail-section {
    /* No border here, distinct separation by gap */
  }

  .section-title {
    font-size: 1.8rem;
    margin-bottom: 32px;
    /* Palette: Dynamic Accent */
    border-left: 6px solid var(--service-accent);
    padding-left: 16px;
    color: #4a5759; /* Iron Grey */
  }

  .sub-title {
    font-size: 1.4rem;
    margin-bottom: 16px;
    margin-top: 32px;
    color: #4a5759;
  }

  .detail-desc {
    white-space: pre-wrap; /* Preserve newlines from JSON */
    line-height: 1.9;
    color: #4a5759;
  }

  /* Features */
  .features-list {
    margin-top: 24px;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    padding: 30px;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.6);
    box-shadow: var(--shadow);
  }
  .features-list ul {
    list-style: disc;
    padding-left: 20px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    color: #4a5759;
  }

  /* Flow */
  .flow-steps {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  .flow-step {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(4px);
    padding: 24px;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.6);
    display: flex;
    gap: 20px;
    align-items: flex-start;
  }
  .step-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 100px;
    gap: 4px;
  }
  .step-label {
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--service-accent); /* Dynamic Accent */
    text-transform: uppercase;
  }
  .step-title {
    font-weight: 700;
    font-size: 1.1rem;
    text-align: center;
    color: #4a5759;
  }
  .step-desc {
    flex: 1;
    color: #4a5759;
    line-height: 1.6;
    margin: 0;
  }

  /* Pricing Table */
  .pricing-table {
    width: 100%;
    border-collapse: collapse;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(4px);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow);
    margin-bottom: 16px;
  }
  .pricing-table th,
  .pricing-table td {
    padding: 18px 24px;
    text-align: left;
    border-bottom: 1px solid rgba(0,0,0,0.05);
  }
  .pricing-table th {
    /* Use accent with alpha? Ideally we could use color-mix, but simple variable is safer */
    /* Let's use a weak background or just a border */
    background: rgba(255,255,255,0.9); 
    border-bottom: 2px solid var(--service-accent);
    font-weight: 700;
    color: #4a5759;
    width: 30%;
  }
  .pricing-table td.cell-item {
    font-weight: 700;
    color: #4a5759;
  }
  .pricing-table td.cell-price {
    font-weight: 700;
    color: var(--service-accent); /* Dynamic Accent */
    font-size: 1.1rem;
  }
  .pricing-table td.cell-note {
    font-size: 0.9rem;
    color: #4a5759;
    opacity: 0.8;
  }

  /* CTA */
  .cta-section {
    text-align: center;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    padding: 60px;
    border-radius: 20px;
    /* Palette: Dynamic Accent */
    border: 2px solid var(--service-accent);
  }
  .cta-section .section-title {
    border: none;
    padding: 0;
    margin-bottom: 16px;
  }
  .cta-section .btn {
    margin-top: 24px;
    padding: 16px 40px;
    font-size: 1.1rem;
    background: var(--service-accent);
    color: #fff;
  }

  /* Message Box */
  .message-box {
    margin-top: 32px;
    padding: 24px;
    background: #ffffff;
    border-left: 4px solid var(--service-accent);
    border-radius: 4px;
    color: #4a5759;
    font-weight: 500;
  }
  .message-box p {
    margin: 0;
  }

  /* Related Organization */
  .related-card {
    background: rgba(255, 255, 255, 0.8);
    padding: 30px;
    border-radius: 12px;
    box-shadow: var(--shadow);
    border: 1px solid rgba(255, 255, 255, 0.6);
  }
  .related-title {
    font-size: 1.3rem;
    margin-bottom: 12px;
    color: #4a5759;
  }
  .related-desc {
    white-space: pre-wrap;
    line-height: 1.8;
    color: #4a5759;
    margin-bottom: 24px;
  }

  /* Learning Layout */
  .learning-layout {
    display: flex;
    flex-direction: column;
    gap: 40px;
    margin-top: 32px;
  }
  .learning-block {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    padding: 32px;
    box-shadow: var(--shadow);
    border: 1px solid rgba(255, 255, 255, 0.6);
    position: relative;
  }
  .learning-block::before {
    content: "";
    position: absolute;
    top: 0; left: 0;
    width: 4px;
    height: 100%;
    background: var(--service-accent); /* Dynamic Accent */
    opacity: 0.5;
    border-top-left-radius: 16px;
    border-bottom-left-radius: 16px;
  }

